/* pages/article-detail/article-detail.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 重置微信小程序默认样式 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

/* 搜索框样式 */
.search-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  text-align: right;
}

/* 搜索结果样式 */
.search-results {
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  max-height: 600rpx;
  overflow-y: auto;
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.search-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.search-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.search-list {
  padding: 0 30rpx;
}

.search-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.search-item:last-child {
  border-bottom: none;
}

.search-item-type {
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 10rpx;
}

.search-item-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.search-item-section {
  font-size: 24rpx;
  color: #999;
}

/* 文章内容样式 */
.article-content {
  padding: 0;
}

.article-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.article-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 部分导航样式 */
.section-nav {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.section-nav-item {
  padding: 15rpx 25rpx;
  background-color: #f8f8f8;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.section-nav-item.active {
  background-color: #007aff;
  color: #fff;
  border-color: #007aff;
}

/* 部分内容样式 */
.section-content {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 部分文本样式 */
.section-text {
  padding: 30rpx;
}

.text-item {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: justify;
}

.text-item:last-child {
  margin-bottom: 0;
}

/* 问题部分样式 */
.questions-section {
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.questions-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.questions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.question-item {
  background-color: #f8f8f8;
  border-radius: 15rpx;
  padding: 25rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  text-align: justify;
}

/* 练习按钮样式 */
.practice-section {
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.practice-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #007aff, #0056cc);
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s;
}

.practice-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 122, 255, 0.3);
}

/* 部分控制样式 */
.section-controls {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-btn {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
  color: #333;
  border-radius: 25rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s;
}

.section-btn:active {
  background-color: #e8e8e8;
}

.section-btn[disabled] {
  background-color: #f5f5f5;
  color: #ccc;
  border-color: #f0f0f0;
}

.section-indicator {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
} 